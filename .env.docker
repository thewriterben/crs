# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# Backend Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this
JWT_SECRET_KEY=your-jwt-secret-key-change-this
DATABASE_URL=postgresql://crs_user:crs_password@postgres:5432/crs_db
REDIS_URL=redis://redis:6379/0
CORS_ORIGINS=http://localhost:8080,https://your-domain.com

# Frontend Configuration
VITE_API_URL=http://localhost:5000

# Optional: PostgreSQL (if using PostgreSQL instead of SQLite)
POSTGRES_USER=crs_user
POSTGRES_PASSWORD=crs_password
POSTGRES_DB=crs_db
