# Backend Configuration
FLASK_APP=main.py
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# Payment Gateway Configuration (for production use)
# Add your payment gateway credentials here
# PAYMENT_GATEWAY_API_KEY=your_api_key_here
# PAYMENT_GATEWAY_SECRET=your_secret_here

# Blockchain API Keys (for transaction verification)
# BLOCKCYPHER_TOKEN=your_blockcypher_token
# ETHERSCAN_API_KEY=your_etherscan_api_key
# BSCSCAN_API_KEY=your_bscscan_api_key
# INFURA_PROJECT_ID=your_infura_project_id

# CFV (Crypto Fair Value) Configuration
CFV_CALCULATOR_URL=http://localhost:3000
CFV_AGENT_URL=http://localhost:3001
CFV_CACHE_TTL=300000
CFV_DISCOUNT_ENABLED=true
CFV_MAX_DISCOUNT=10
SUPPORTED_CRYPTOS=XNO,NEAR,ICP,EGLD,DGB,DASH,XCH,XEC,XMR,RVN,DGD,BTC-LN

# Security
SECRET_KEY=your_secret_key_here_change_in_production

# Database
DATABASE_URL=postgresql://localhost/cryptons_db
# For development with SQLite:
# DATABASE_URL=sqlite:///cryptons.db
