{
  "name": "cryptocurrency-marketplace",
  "version": "1.0.0",
  "description": "AI-powered cryptocurrency marketplace with trading bots, portfolio optimization, and e-commerce features.",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python main.py",
    "build": "cd frontend && npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "preview": "cd frontend && npm run preview",
    "install:all": "cd frontend && npm install",
    "setup:backend": "cd backend && python -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "lint": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint -- --fix",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test:run",
    "test:backend": "cd backend && python -m pytest tests/ -v",
    "test:coverage": "npm run test:frontend:coverage && npm run test:backend:coverage",
    "test:frontend:coverage": "cd frontend && npm run test:coverage",
    "test:backend:coverage": "cd backend && python -m pytest tests/ -v --cov=src --cov-report=term --cov-report=html",
    "type-check": "cd frontend && npm run type-check",
    "clean": "rm -rf frontend/node_modules frontend/dist backend/venv backend/__pycache__",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json frontend/package-lock.json"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "cryptocurrency",
    "ai",
    "trading",
    "react",
    "flask",
    "portfolio-optimization",
    "trading-bots",
    "portfolio",
    "ecommerce",
    "marketplace",
    "analytics",
    "machine-learning",
    "fintech",
    "blockchain",
    "radix-ui",
    "tailwindcss"
  ],
  "author": "Cryptons.com Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thewriterben/crs.git"
  },
  "homepage": "https://github.com/thewriterben/crs#readme",
  "bugs": {
    "url": "https://github.com/thewriterben/crs/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "python": ">=3.8.0"
  },
  "packageManager": "npm@10.0.0"
}